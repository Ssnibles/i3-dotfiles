{
  // Editor Behavior
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "tab_size": 2,
  "soft_wrap": "editor_width",
  "show_whitespaces": "boundary",
  "cursor_blink": true,
  "ensure_final_newline_on_save": true,
  "auto_update": true,
  "restore_on_startup": "none",
  "auto_indent_on_paste": true,
  "format_on_save": "prettier",
  "hover_popover_enabled": true,

  // Indent Guides
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1
  },

  // Appearance
  "theme": "Ros√© Pine Moon",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "use_file_icons": true,

  // UI Elements
  "scrollbar": {
    "show": "never"
  },
  "project_panel": {
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "tab_bar": {
    "show": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },

  // Langugage and coding assistance
  "enable_language_server": true,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },

  // Specific languages
  "languages": {
    "Python": {
      "tab_size": 4,
      "formatter": "language_server",
      "format_on_save": "on"
    }
  }
}
